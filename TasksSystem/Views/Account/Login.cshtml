@model TasksSystem.ViewModels.LoginViewModel

<h2>Sign in to TasksSystem</h2>


<a asp-action="Register" asp-controller="Account">New to TaskSystem? Create an account</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <br /><input type="submit" value="Sign in" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

